@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Barter Bot</h1>
    <p class="lead">Borter Bot provides you the platform for exchanging your skills with great ease!</p>
</div>







<div class="row">
    <div class="col-md-8">

        <div class="container" style="width: 700px;">
            <h2>Exchange Your Skills!</h2>
            <p>
                Everyone is good at something. Something that one can do efficiently, and obviously for others. <br>
                Borter Bot provides you the oppurtunity to sell your skills to others on time/money basis and in return, you will get the benefits of others'
                skills. <br> So What are you waiting for. Go for it. <b>Register Yourself!</b> <br> The bot is yours!
            </p>
        </div>

    </div>
    <div class="col-md-4">
        <img src="~/App_Data/images.jpg" />

    </div>
</div>

<div class="well well-sm" >
    <h4>Server is setting up .........pl, wait</h4>
    <br /><div class="row" style="font-weight:bolder" >
    <div class="col-sm-2" >
        <h4 id="time" style="color:#242a71;margin-left:30px" ></h4>
    </div>
              <div class="col-sm-2">
                  
                  <h3 id="dots">...............</h3>
              </div>
              <div class="col-sm-2">

                  <h3 id="dots1">..............</h3>
              </div>
              <div class="col-sm-2">

                  <h3 id="dots2">..............</h3>
              </div>
              <div class="col-sm-2">

                  <h3 id="dots3">..............</h3>
              </div>
              <div class="col-sm-2">

                  <h3 id="dots4">..............</h3>
              </div>
    </div>
    
    
   
    @{ 
        System.Timers.Timer t = new System.Timers.Timer();
        t.Interval = 1000;
        double g = 0.0;
        t.Start();

    }
    <h3 id="connect" style="display:none;color:#20bd1a" ><span id="connect" style="color:#221f1f" >Server</span> is now ready to accept connections...</h3>
</div>
<h3 style="margin-left:500px;font-weight:bolder;" > Server Window </h3>
<div class="container"  style="margin-left:200px" >
    
    <div class="well well-sm" style="width:700px" >
       <div style="border:1px solid #221f1f;border-radius:10px" >
                <div class="row" >
                    <div class="col-sm-5" >
                        <h5  style="margin-left:5px;font-weight:bolder;text-decoration:underline;" > Clients: </h5>
                    </div>

                    <div class="col-sm-7">
                        
                        @{int df = 1;

                            if (BarterBot2.Controllers.HomeController.clientSockets.Count == 0)
                            {
                                <h5 style="font-weight:bolder;color:#ff6a00" >No any connections to server</h5>
                            }
                            else
                            {
                                foreach (System.Net.Sockets.Socket s in BarterBot2.Controllers.HomeController.clientSockets)
                                {
                                <h5>  <span style="font-weight:bold;color:#4a74ae;" >@df  :</span>  <span  > @s.RemoteEndPoint.ToString()</span></h5>

                                        df++;
                                    }
                                }
                            }
                    </div>
                    
                </div>
           
            </div>
        <h5 style="font-weight:bold;font-style:italic;margin-left:300px" > Requets </h5>
        <hr />
        <div class="container" style="border:2px solid #808080;border-radius:5px;" >
            @{
                if (BarterBot2.Controllers.HomeController.data.Count == 0)
                {
                    <h5 style="font-weight:bolder;margin-left:300px;color:#dc384c"> Empty </h5>
                }
                else
                {
                    <div class="row" >
                        <div class="col-sm-4">
                            @foreach (string s in BarterBot2.Controllers.HomeController.data)
                            {
                                <h5 style="color:#4b4b4b;font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif;"> @s </h5>
                            }
                        </div>
                            <div class="col-sm-6">
                                @foreach (string s in BarterBot2.Controllers.HomeController.data2)
                                {
                                    <h5 style="color:rgb(185, 58, 58);font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif;"> @s </h5>
                                }

                            </div>
                            <div class="col-sm-2">
                               @foreach (string s in BarterBot2.Controllers.HomeController.data3)
                               {
                                    <h5 style="color:#4a74ae;font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif;"><span style="color:#808080;margin-right:2px" >to-</span>  @s </h5>
                               }

                            </div> 
                            
                        
                        </div>
                    }
                }


            
        </div>
    </div>
</div>

<script type="text/javascript" >
    
    var i = 0;
    var ff = setInterval(mytimer, 1000);
    var fff = setInterval(mytimer2, 500);
    var d = 0;
    function mytimer() {
        var f = new Date();
        document.getElementById("time").innerHTML = f.toLocaleTimeString();
        d++;

        if (d == 10) {

            $("#connect").show();

        }

    }

    function mytimer2() {
        if (i == 0) {

            $("#dots").hide();
            $("#dots2").hide();
            $("#dots1").show();
            $("#dots3").show();
            $("#dots4").hide();

            @*@{
                int dd = 0;
                if(BarterBot2.Controllers.HomeController.g > 0)
                {
                    dd = 10;
                }
            }
            d=@dd;*@
            
            if (d >=10) {
                $("#connect").fadeToggle("slow");
            }
           // $("#connect").animate({ height: "50px" });
            i = 1;
        } else {
       
            if (d >=10) {
                $("#connect").fadeToggle("slow");
            }
            $("#dots").show();
            $("#dots2").show();
            $("#dots4").show();
            $("#dots1").hide();
            $("#dots3").hide();
           // $("#connect").animate({ height: "30px" });
            i = 0;
        }
    }
    

</script>
